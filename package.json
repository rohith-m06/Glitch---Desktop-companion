{
  "name": "ai-companion",
  "version": "1.0.0",
  "description": "AI Desktop Companion with Gemini and ElevenLabs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "ai",
    "companion",
    "electron",
    "gemini",
    "elevenlabs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "electron-store": "^8.2.0",
    "node-fetch": "^2.7.0",
    "node-telegram-bot-api": "^0.67.0",
    "playwright": "^1.57.0",
    "three": "^0.182.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KirthanNB/AI-Companion.git"
  },
  "build": {
    "appId": "com.yourname.aicompanion",
    "productName": "AI Desktop Companion",
    "publish": [
      {
        "provider": "github",
        "owner": "KirthanNB",
        "repo": "AI-Companion"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}